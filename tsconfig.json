{
  "extends": "./node_modules/astro/tsconfigs/strict.json",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "ignoreDeprecations": "6.0",
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "skipLibCheck": true,
    "types": []
  },
  "exclude": [
    "dist",
    "src/pages/admin.astro",
    "src/lib/anim/**/*.astro",
    "node_modules"
  ]
}
