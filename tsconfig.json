{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "ignoreDeprecations": "6.0",
    "jsx": "preserve",
    "jsxImportSource": "astro"
  },
  "exclude": [
    "dist",
    "src/pages/admin.astro",
    "src/lib/anim/**/*.astro"
  ]
}
