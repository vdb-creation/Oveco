---
/**
 * Hero Component - Oveco
 * Section héro avec images et cercle suiveur de souris
 * Layout inspiré par le design Tailwind fourni
 * @component
 */

export interface HeroProps {
  subtitle?: string;
  title: string;
  description?: string;
  ctaText?: string;
  ctaUrl?: string;
  images?: Array<{
    src: string;
    alt: string;
    class?: string;
  }>;
  sectionIndex?: number;
}

const {
  subtitle = "oveco",
  title,
  description = "Des ingénieurs-installateurs qui conçoivent et réalisent votre projet sur mesure.",
  ctaText = "Nous contacter",
  ctaUrl = "#contact",
  sectionIndex = 0,
  images = [
    {
      src: "/uploads/hero/maison-build.png",
      alt: "Maison avec toiture énergétique",
      class: "hero__image hero__image--large-1"
    },
    {
      src: "/uploads/hero/maison-build.png", 
      alt: "Installation énergétique",
      class: "hero__image hero__image--large-2"
    },
    {
      src: "/uploads/hero/maison-build.png",
      alt: "Construction énergétique", 
      class: "hero__image hero__image--medium-1"
    },
    {
      src: "/uploads/hero/maison-build.png",
      alt: "Réalisation énergétique",
      class: "hero__image hero__image--medium-2"
    }
  ]
} = Astro.props;

function mapImageClassAndId(image: { class?: string }, index: number) {
  // Mapping basé sur l'ordre d'index pour garantir le bon placement
  // Index 0 -> Haut Gauche (img1)
  // Index 1 -> Haut Droite (img2)
  // Index 2 -> Bas Gauche (img3)
  // Index 3 -> Bas Droite (img4)
  const num = index + 1;
  
  return {
    id: `img${num}`,
    className: `hero__image hero__image--${num}`
  };
}
---

<div class="home-page">
  <section class="hero" role="banner" aria-labelledby="hero-title">
    <div class="hero__mouse-follower" id="mouseFollower" aria-hidden="true"></div>
    
    <div class="hero__container">
      {images && images.length > 0 && images.map((image: { src: string; alt: string; class?: string }, index: number) => {
        const mapped = mapImageClassAndId(image, index);
        return (
          <div class={`hero__image-wrapper hero__image-wrapper--${index + 1}`} id={`wrapper-img${index + 1}`}>
            <img 
              src={image.src} 
              alt={image.alt} 
              loading={index === 0 ? "eager" : "lazy"}
              decoding="async"
              class={mapped.className}
              id={mapped.id}
              data-bind={`sections.${sectionIndex}.images.${index}.src`}
              data-bind-attr="src"
              role="presentation"
            />
          </div>
        );
      })}
      
      <div class="hero__content">
        <div class="hero__glow-bg"></div>
        <header class="hero__header">
          <p class="hero__subtitle" data-bind={`sections.${sectionIndex}.subtitle`} aria-label="Sous-titre">{subtitle}</p>
          <h1 class="hero__title" id="hero-title" data-bind={`sections.${sectionIndex}.title`}>{title}</h1>
        </header>
        <p class="hero__description" data-bind={`sections.${sectionIndex}.description`}>{description}</p>
        <a 
          href={ctaUrl} 
          class="hero__cta" 
          data-bind={`sections.${sectionIndex}.ctaUrl`} 
          aria-label={`${ctaText} - Contactez-nous`}
        >
          <span data-bind={`sections.${sectionIndex}.ctaText`}>{ctaText}</span>
        </a>
      </div>
    </div>
  </section>
</div>

<script>
function initMouseFollower() {
  const follower = document.getElementById('mouseFollower');
  const heroSection = document.querySelector('.hero');

  if (!follower || !heroSection) return;

  // État pour l'animation fluide
  let mouseX = 0;
  let mouseY = 0;
  let currentX = 0;
  let currentY = 0;
  let isVisible = false;

  // Facteur de lissage (plus petit = plus lent/fluide)
  const speed = 0.1;

  // Boucle d'animation
  function animate() {
    // Interpolation linéaire (Lerp)
    const dx = mouseX - currentX;
    const dy = mouseY - currentY;
    
    currentX += dx * speed;
    currentY += dy * speed;

    // Appliquer la position (centrée)
    follower.style.transform = `translate3d(${currentX}px, ${currentY}px, 0) translate(-50%, -50%)`;
    
    // Gérer l'opacité
    follower.style.opacity = isVisible ? '1' : '0';

    requestAnimationFrame(animate);
  }
  
  // Démarrer la boucle
  animate();

  // Écouteur de mouvement sur la section hero
  heroSection.addEventListener('mousemove', (e: any) => {
    const rect = heroSection.getBoundingClientRect();
    // Position relative au conteneur hero
    mouseX = e.clientX - rect.left;
    mouseY = e.clientY - rect.top;
    isVisible = true;
  });

  heroSection.addEventListener('mouseleave', () => {
    isVisible = false;
  });
}

// Initialisation
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', initMouseFollower);
} else {
  initMouseFollower();
}
</script>

<style>
/* ---- Layout Global ---- */
.hero {
  position: relative;
  min-height: 100vh; /* Fallback */
  min-height: 100dvh;
  width: 100%;
  background-color: #FFFEF8; /* bg-orange-50 equivalent */
  background-image: url("/src/assets/imgs/BgHome.svg");
  background-size: cover;
  background-position: center;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 2rem;
}

.hero__container {
  position: relative;
  width: 100%;
  max-width: 1440px; /* Largeur de référence du design */
  height: 100%;
  min-height: 800px; /* Hauteur min pour desktop */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ---- Contenu Central ---- */
.hero__content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 660px; /* w-[656px] */
  gap: 1.5rem;
}

/* Glow effect derrière le texte (inspiré du design) */
.hero__glow-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 350px;
  height: 350px;
  background-color: #334749;
  border-radius: 50%;
  filter: blur(180px); /* blur-[265.68px] adapté */
  opacity: 0.15;
  z-index: -1;
  pointer-events: none;
}

.hero__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.hero__subtitle {
  color: #5C6D6F; /* text-gray-500 */
  font-family: "Nunito Sans Variable", sans-serif;
  font-size: 1.25rem; /* text-xl */
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em; /* tracking-widest */
  margin: 0;
}

.hero__title {
  color: #334749; /* text-gray-700 */
  font-family: "Nunito Sans Variable", sans-serif;
  font-size: clamp(2.5rem, 5vw, 3.5rem); /* text-5xl responsive */
  font-weight: 800;
  line-height: 1.1;
  margin: 0;
}

.hero__description {
  color: #5C6D6F;
  font-family: "Nunito Sans Variable", sans-serif;
  font-size: 1.25rem; /* text-xl */
  line-height: 1.5;
  margin: 0;
}

.hero__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: #334749; /* Couleur demandée */
  color: #FFFEF8; /* text-stone-50 */
  font-family: "Nunito Sans Variable", sans-serif;
  font-size: 1.25rem; /* text-xl */
  font-weight: 700;
  padding: 1rem 2rem; /* px-7 py-4 */
  border-radius: 30px;
  text-decoration: none;
  transition: transform 0.2s ease, background-color 0.2s ease;
}

.hero__cta:hover {
  background-color: #253335; /* Légèrement plus sombre au survol */
  transform: translateY(-2px);
}

/* ---- Images ---- */
.hero__image-wrapper {
  position: absolute;
  border-radius: 30px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(4, 139, 154, 0.05); /* Ombre subtile teal */
  transition: transform 0.3s ease;
  z-index: 5;
}

.hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* -- Positionnement Desktop (Reference 1440px+) -- */
/* Plus d'espace pour les grands écrans */
/* HG */
#wrapper-img1 {
  width: 256px;
  height: 320px;
  left: 2%; /* Écarté vers le bord (était 5%) */
  top: 15%;
}

/* HD */
#wrapper-img2 {
  width: 256px;
  height: 320px;
  right: 2%; /* Écarté vers le bord (était 5%) */
  top: 15%;
}

/* BG */
#wrapper-img3 {
  width: 320px;
  height: 240px;
  left: 12%; /* Écarté du centre (était 16%) */
  top: 56%;
}

/* BD */
#wrapper-img4 {
  width: 320px;
  height: 240px;
  right: 12%; /* Écarté du centre (était 16%) */
  top: 56%;
}

/* Cercle suiveur */
.hero__mouse-follower {
  position: absolute;
  top: 0;
  left: 0;
  width: 120px;
  height: 120px;
  background: radial-gradient(circle, rgba(4,139,154,0.3) 0%, rgba(4,139,154,0) 70%);
  border-radius: 50%;
  pointer-events: none;
  z-index: 2;
  mix-blend-mode: multiply;
  will-change: transform, opacity;
  opacity: 0;
  transition: opacity 0.3s ease;
}

/* ---- Media Queries Responsive ---- */

/* Laptop moyen (1200px - 1440px) : On réduit un peu proportionnellement */
@media (max-width: 1400px) {
  #wrapper-img1, #wrapper-img2 { width: 220px; height: 280px; }
  #wrapper-img3, #wrapper-img4 { width: 280px; height: 210px; }
  
  #wrapper-img1 { left: 2%; }
  #wrapper-img2 { right: 2%; }
  #wrapper-img3 { left: 12%; top: 60%; }
  #wrapper-img4 { right: 12%; top: 60%; }
}

/* Tablette / Petit Laptop (900px - 1200px) */
@media (max-width: 1200px) {
  .hero__container { min-height: 700px; }
  
  #wrapper-img1, #wrapper-img2 { width: 180px; height: 230px; }
  #wrapper-img3, #wrapper-img4 { width: 220px; height: 170px; }
  
  #wrapper-img1 { left: 1%; top: 10%; }
  #wrapper-img2 { right: 1%; top: 10%; }
  #wrapper-img3 { left: 5%; top: 65%; }
  #wrapper-img4 { right: 5%; top: 65%; }
  
  .hero__title { font-size: 2.5rem; }
}

/* Tablette Portrait (700px - 900px) */
@media (max-width: 900px) {
  .hero { padding: 4rem 1rem; height: auto; min-height: auto; }
  .hero__container { 
    flex-direction: column; 
    min-height: auto; 
    gap: 3rem;
  }
  
  /* Layout Grid 2x2 pour les images au dessus et dessous */
  .hero__content { order: 2; margin: 2rem 0; }
  
  .hero__image-wrapper {
    position: static; /* Reset absolute */
    transform: none;
  }
  
  /* On cache les images secondaires pour alléger ou on les réarrange */
  #wrapper-img1 { display: block; order: 1; width: 100%; max-width: 400px; height: 300px; margin-bottom: -40px; z-index: 1; }
  #wrapper-img2 { display: none; } /* Trop chargé sur tablette portrait */
  #wrapper-img3 { display: none; }
  #wrapper-img4 { display: block; order: 3; width: 100%; max-width: 400px; height: 250px; margin-top: -20px; z-index: 1; }
}

/* Mobile (< 700px) */
@media (max-width: 700px) {
  .hero { padding: 6rem 1.5rem 3rem; }
  .hero__container { display: flex; flex-direction: column; justify-content: flex-start; }
  
  .hero__content { 
    order: 1; 
    margin-bottom: 3rem;
    align-items: flex-start;
    text-align: left;
  }
  
  .hero__title { font-size: 2.25rem; }
  .hero__subtitle { font-size: 1rem; }
  .hero__description { font-size: 1.1rem; }
  
  .hero__image-wrapper {
    position: static;
    width: 100% !important;
    height: auto !important;
    aspect-ratio: 4/3;
    margin: 0 0 1rem 0 !important;
    border-radius: 20px;
  }
  
  /* Afficher une seule belle image en dessous du texte */
  #wrapper-img1 { display: none; }
  #wrapper-img2 { display: none; }
  #wrapper-img3 { display: block; order: 2; aspect-ratio: 16/10; }
  #wrapper-img4 { display: none; }
  
  .hero__cta { width: 100%; }
}
</style>
