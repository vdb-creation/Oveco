---
/**
 * Composant: Contact
 * Section de contact avec informations et formulaire dynamique
 * Compatible TinaCMS via props avec champs configurables
 */

import type { FormField } from '../types/contact';
import { DEFAULT_FORM_FIELDS, FIELD_REGEX, FIELD_DEFAULTS, generateFieldId } from '../types/contact';

export interface ContactInfo {
  email?: string;
  phone?: string;
  location?: string;
}

export interface Props {
  subtitle?: string;
  title?: string;
  description?: string;
  contactInfo?: ContactInfo;
  formAction?: string;
  formFields?: FormField[];
  sectionIndex?: number;
}

const {
  subtitle = "Nous contacter",
  title = "Vous avez une idée, un projet, ou simplement des questions ?",
  description = "Écrivez-nous ou appelez-nous, on sera ravi d'en discuter.",
  contactInfo = {
    email: "job@oveco.be",
    phone: "+32 473 / 68.99.02",
    location: "Région de Beauvechain"
  },
  // Envoi par défaut via Web3Forms
  formAction = "https://api.web3forms.com/submit",
  formFields = DEFAULT_FORM_FIELDS,
  sectionIndex = 0
} = Astro.props;

// Générer le data-bind approprié selon le type de champ
const getDataBind = (field: string) => {
  if (sectionIndex === -1) {
    return `globalComponents.contact.${field}`;
  }
  return `sections.${sectionIndex}.${field}`;
};

// TOUJOURS pointer vers globalComponents pour les formFields (source unique)
const getFormFieldDataBind = (fieldIndex: number, property: string) => {
  return `globalComponents.contact.formFields.${fieldIndex}.${property}`;
};

// Trier les champs par ordre et générer les IDs automatiquement
// L'ordre est déterminé par la position dans le tableau (index + 1)
const sortedFields = [...formFields].map((field, index) => ({
  ...field,
  order: field.order || index + 1,
  id: field.id || generateFieldId(field.type, index + 1)
}));

// Séparer message (textarea) des autres champs
const messageField = sortedFields.find(f => f.type === 'textarea');
const inputFields = sortedFields.filter(f => f.type !== 'textarea');

// Diviser les champs input en deux colonnes (max 4 champs)
const firstColFields = inputFields.slice(0, 2);
const secondColFields = inputFields.slice(2, 4);

// Récupérer les données de validation pour chaque champ
const getFieldValidation = (field: FormField) => {
  const regex = field.customRegex || FIELD_REGEX[field.type]?.pattern || '';
  const errorMessage = field.errorMessage || FIELD_REGEX[field.type]?.message || '';
  return { regex, errorMessage };
};

// Récupérer les attributs HTML par défaut
const getFieldAttributes = (field: FormField) => {
  const defaults = FIELD_DEFAULTS[field.type] || {};
  return {
    autocomplete: field.autocomplete || defaults.autocomplete || 'off',
    inputmode: field.inputmode || defaults.inputmode || 'text',
    type: defaults.type || 'text'
  };
};
