<script>
/**
 * Script de gestion du formulaire de contact
 * - Validation dynamique des champs basée sur data-pattern
 * - Gestion de la soumission Web3Forms
 */

// Attendre que le DOM soit chargé
document.addEventListener('DOMContentLoaded', () => {
  const form = document.querySelector('.contact__form') as HTMLFormElement;
  if (!form) return;
  const statusBox = form.querySelector('.contact__status') as HTMLElement | null;
  const successBox = document.querySelector('.contact__success') as HTMLElement | null;

  // Validation d'un champ avec pattern dynamique
  function validateField(field: HTMLInputElement | HTMLTextAreaElement): boolean {
    const value = field.value.trim();
    const errorDiv = document.getElementById(`${field.id}-error`);
    
    if (!errorDiv) return true;

    let isValid = true;
    let errorMessage = '';

    // Vérifier si requis
    if (field.hasAttribute('required') && !value) {
      isValid = false;
      errorMessage = 'Ce champ est requis';
    }
    // Validation avec pattern personnalisé
    else if (value && field.dataset.pattern) {
      try {
        const pattern = new RegExp(field.dataset.pattern);
        if (!pattern.test(value)) {
          isValid = false;
          errorMessage = field.dataset.errorMessage || 'Format invalide';
        }
      } catch (e) {
        console.error('Regex invalide:', field.dataset.pattern, e);
      }
    }

    // Afficher/masquer l'erreur
    errorDiv.textContent = errorMessage;
    field.classList.toggle('contact__input--error', !isValid);
    field.classList.toggle('contact__textarea--error', !isValid);
    field.setAttribute('aria-invalid', (!isValid).toString());

    return isValid;
  }

  // Validation en temps réel
  const fields = form.querySelectorAll<HTMLInputElement | HTMLTextAreaElement>('input[name]:not([name="botcheck"]):not([type="hidden"]), textarea');
  fields.forEach(field => {
    field.addEventListener('blur', () => validateField(field));
    field.addEventListener('input', () => {
      if (field.classList.contains('contact__input--error') || field.classList.contains('contact__textarea--error')) {
        validateField(field);
      }
    });
  });

  // Gestion de la soumission (envoi à Web3Forms)
  function showStatus(type: 'success' | 'error' | 'info', message: string) {
    if (!statusBox) return;
    statusBox.textContent = message;
    statusBox.classList.remove('contact__status--success', 'contact__status--error');
    if (type === 'success') statusBox.classList.add('contact__status--success');
    if (type === 'error') statusBox.classList.add('contact__status--error');
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Valider tous les champs
    let isFormValid = true;
    fields.forEach(field => {
      if (!validateField(field)) {
        isFormValid = false;
      }
    });

    if (!isFormValid) {
      const firstError = form.querySelector('.contact__input--error, .contact__textarea--error') as HTMLElement;
      firstError?.focus();
      showStatus('error', 'Merci de corriger les champs indiqués.');
      return;
    }

    // Honeypot anti-bot
    const hp = form.querySelector('input[name="botcheck"]') as HTMLInputElement | null;
    if (hp && hp.value) {
      showStatus('error', 'Détection anti-spam.');
      return;
    }

    // Récupérer les données du formulaire
    const formDataObj: Record<string, string> = {
      access_key: '2f49656a-b6d6-41f0-bc7f-5d7c68340a41'
    };
    
    // Récupérer tous les champs du formulaire
    const formData = new FormData(form);
    for (const [key, value] of formData.entries()) {
      if (key !== 'botcheck' && value) {
        formDataObj[key] = value.toString();
      }
    }
    
    // S'assurer que la clé d'accès est bien présente
    if (!formDataObj.access_key) {
      formDataObj.access_key = '2f49656a-b6d6-41f0-bc7f-5d7c68340a41';
    }

    // UI: désactiver le bouton submit
    const submitBtn = form.querySelector('.contact__submit') as HTMLButtonElement | null;
    if (submitBtn) submitBtn.disabled = true;
    showStatus('info', 'Envoi en cours...');

    try {
      const web3formsUrl = 'https://api.web3forms.com/submit';
      
      const response = await fetch(web3formsUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        body: JSON.stringify(formDataObj)
      });

      const contentType = response.headers.get('content-type') || '';
      const isJSON = contentType.includes('application/json');
      
      let result: any = {};
      let isHTMLResponse = false;
      
      try {
        if (isJSON) {
          result = await response.clone().json();
        } else {
          const rawText = await response.clone().text();
          if (rawText) {
            isHTMLResponse = rawText.trim().startsWith('<!DOCTYPE') || rawText.trim().startsWith('<html');
            result = { raw: rawText.slice(0, 500), isHTML: isHTMLResponse };
          }
        }
      } catch (parseError) {
        try {
          const rawText = await response.clone().text();
          if (rawText) {
            isHTMLResponse = rawText.trim().startsWith('<!DOCTYPE') || rawText.trim().startsWith('<html');
            result = { raw: rawText.slice(0, 500), isHTML: isHTMLResponse };
          }
        } catch {}
      }

      const condition1 = response.ok;
      const condition2 = !!result;
      const condition3 = result?.success === true;
      const condition4 = isHTMLResponse && response.status === 200;
      
      const isSuccess = condition1 && condition2 && (condition3 || condition4);
      
      if (isSuccess) {
        const contactEmailLink = document.querySelector('.contact__link--accent[href^="mailto:"]') as HTMLAnchorElement;
        const contactEmail = contactEmailLink ? contactEmailLink.href.replace('mailto:', '') : 'job@oveco.be';
        
        form.reset();
        form.style.display = 'none';
        if (successBox) {
          successBox.hidden = false;
          successBox.innerHTML = '<strong>Merci !</strong> Votre message a été envoyé avec succès. Nous vous répondrons au plus vite. Vous pouvez aussi nous écrire directement à <a href="mailto:' + contactEmail + '" class="contact__link contact__link--accent" style="text-decoration:underline">' + contactEmail + '</a>.';
        } else {
          showStatus('success', 'Message envoyé ✅');
        }
      } else {
        let errorMessage = 'Erreur lors de l\'envoi. Veuillez réessayer plus tard.';
        
        if (isHTMLResponse) {
          if (response.status === 200) {
            const contactEmailLink = document.querySelector('.contact__link--accent[href^="mailto:"]') as HTMLAnchorElement;
            const contactEmail = contactEmailLink ? contactEmailLink.href.replace('mailto:', '') : 'job@oveco.be';
            
            form.reset();
            form.style.display = 'none';
            if (successBox) {
              successBox.hidden = false;
              successBox.innerHTML = '<strong>Merci !</strong> Votre message a été envoyé avec succès. Nous vous répondrons au plus vite. Vous pouvez aussi nous écrire directement à <a href="mailto:' + contactEmail + '" class="contact__link contact__link--accent" style="text-decoration:underline">' + contactEmail + '</a>.';
            } else {
              showStatus('success', 'Message envoyé ✅');
            }
            return;
          } else {
            errorMessage = 'Web3Forms a retourné une page HTML au lieu de JSON. Vérifiez votre configuration.';
          }
        } else if (result && result.message) {
          errorMessage = result.message;
        } else if (result && result.error) {
          errorMessage = result.error;
        } else if (!response.ok) {
          errorMessage = `Erreur HTTP ${response.status}: ${response.statusText}`;
        } else if (result && result.success === false) {
          errorMessage = 'L\'envoi a échoué. Vérifiez votre clé d\'accès Web3Forms et les restrictions de domaine.';
        } else if (!result || Object.keys(result).length === 0) {
          errorMessage = 'Réponse vide de Web3Forms. Vérifiez votre clé d\'accès et la configuration.';
        }
        
        showStatus('error', errorMessage);
      }
    } catch (error) {
      showStatus('error', 'Erreur réseau. Veuillez réessayer plus tard.');
    } finally {
      if (submitBtn) submitBtn.disabled = false;
    }
  });
});

</script>
