---
/**
 * Composant: WorksHero
 * Hero pour la page des réalisations avec grille de fond et 2 images latérales
 * Compatible TinaCMS via props
 */

import SmartImage from './SmartImage.astro';

export interface MediaImage {
  src: string;
  alt: string;
  overlay?: boolean;
}

export interface Props {
  subtitle?: string;
  title?: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
  mediaLeft?: MediaImage;
  mediaRight?: MediaImage;
  id?: string;
  sectionIndex?: number;
}

const {
  id = "works-hero-title",
  subtitle = "Nos réalisations",
  title = "Des projets qui ont du sens",
  description = "Description courte ipsum dolor sit amet consectetur adipiscing elit tortor eu egestas morbi sem vulputate etiam facilisis pellentesque ut quis.",
  ctaLabel = "Nous contacter",
  ctaHref = "#contact",
  sectionIndex = 0,
  mediaLeft = {
    src: "/uploads/hero/maison-build.png",
    alt: "Maison avec panneaux solaires"
  },
  mediaRight = {
    src: "/uploads/hero/maison-build.png",
    alt: "Chantier de construction",
    overlay: true
  }
} = Astro.props;

// Sécuriser les objets media pour éviter les erreurs null/undefined
const safeMediaLeft = mediaLeft || { src: "/uploads/hero/maison-build.png", alt: "Maison avec panneaux solaires" };
const safeMediaRight = mediaRight || { src: "/uploads/hero/maison-build.png", alt: "Chantier de construction", overlay: true };
---

<section class="works-hero" aria-labelledby={id}>
  <div class="works-hero__inner">
    <div class="works-hero__side works-hero__side--left" aria-hidden="true" role="presentation">
      <figure class="works-hero__figure">
        <SmartImage
          cmsSrc={safeMediaLeft.src}
          alt={safeMediaLeft.alt}
          width={320}
          height={384}
          context="galerie"
          loading="lazy"
          class="works-hero__image"
          data-bind={`sections.${sectionIndex}.mediaLeft.src`}
          data-bind-attr="src"
        />
      </figure>
    </div>

    <div class="works-hero__content">
      <header class="works-hero__header">
        <p class="works-hero__subtitle" data-bind={`sections.${sectionIndex}.subtitle`} aria-label="Sous-titre de la section réalisations">{subtitle}</p>
        <h1 class="works-hero__title" id={id} data-bind={`sections.${sectionIndex}.title`}>{title}</h1>
      </header>
      <p class="works-hero__desc" data-bind={`sections.${sectionIndex}.description`}>{description}</p>
      <a 
        href={ctaHref} 
        class="works-hero__cta" 
        data-bind={`sections.${sectionIndex}.ctaHref`}
        aria-label={`${ctaLabel} - Découvrez nos réalisations`}
      >
        <span data-bind={`sections.${sectionIndex}.ctaLabel`}>{ctaLabel}</span>
      </a>
    </div>

    <div class="works-hero__side works-hero__side--right" aria-hidden="true" role="presentation">
      <figure class={`works-hero__figure ${safeMediaRight.overlay ? 'works-hero__figure--overlay' : ''}`}>
        <SmartImage
          cmsSrc={safeMediaRight.src}
          alt={safeMediaRight.alt}
          width={320}
          height={384}
          context="galerie"
          loading="lazy"
          class="works-hero__image"
          data-bind={`sections.${sectionIndex}.mediaRight.src`}
          data-bind-attr="src"
        />
      </figure>
    </div>
  </div>
</section>

<style>
/* CSS extrait de wp-content/themes/oveco/style.css (works-hero section) */
.works-hero {
  background-image: url("/src/assets/imgs/BgGrille.svg");
  background-repeat: repeat-x;
  background-position: center top;
  background-size: auto;
  padding: clamp(60px, 12vw, 180px) clamp(16px, 6vw, 75px);
  margin-top: clamp(40px, 8vw, 80px);
  margin-bottom: clamp(40px, 8vw, 80px);
  position: relative;
  overflow: visible;
}

.works-hero::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: -120px;
  height: 120px;
  background-image: inherit;
  background-repeat: repeat-x;
  background-position: center top;
  background-size: auto;
  pointer-events: none;
  z-index: 0;
}

.works-hero__inner {
  width: 100%;
  max-width: 1219px;
  margin: 0 auto;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  gap: clamp(24px, 4vw, 63px);
  position: relative;
  z-index: 1;
}

/* Tablette: ajuster layout avant de passer en colonne */
@media (max-width: 1200px) and (min-width: 769px) {
  .works-hero__inner {
    gap: clamp(20px, 3vw, 40px);
  }
}

/* Tablette et mobile: passage en colonne */
@media (max-width: 768px) {
  .works-hero__inner {
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: clamp(24px, 5vw, 40px);
    text-align: center;
  }
}

.works-hero__side {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  /* Amélioration accessibilité */
  pointer-events: none;
}

.works-hero__side--left {
  padding-bottom: clamp(12px, 3vw, 72px);
  order: 1;
}

.works-hero__side--right {
  padding-top: clamp(12px, 3vw, 72px);
  order: 3;
}

/* Desktop large: afficher les images en taille optimale */
@media (min-width: 1400px) {
  .works-hero__side {
    display: flex;
  }
}

/* Desktop: afficher les images */
@media (min-width: 1025px) and (max-width: 1399px) {
  .works-hero__side {
    display: flex;
  }
}

/* Tablette large: cacher progressivement */
@media (max-width: 1024px) and (min-width: 769px) {
  .works-hero__side {
    display: none;
    opacity: 0;
    visibility: hidden;
  }
}

/* Mobile: cacher complètement */
@media (max-width: 768px) {
  .works-hero__side {
    display: none !important;
    opacity: 0 !important;
    visibility: hidden !important;
  }
}

.works-hero__figure {
  width: clamp(240px, 20vw, 320px);
  height: clamp(290px, 24vw, 384px);
  position: relative;
  overflow: hidden;
  border-radius: clamp(20px, 2.5vw, 30px);
  margin: 0;
  display: block;
  flex-shrink: 0;
  /* Amélioration performance */
  will-change: transform;
  transform: translateZ(0);
  contain: layout style paint;
}

@media (min-width: 1400px) {
  .works-hero__figure {
    width: 320px;
    height: 384px;
    border-radius: 30px;
  }
}

/* Desktop standard: ajuster la taille */
@media (max-width: 1399px) and (min-width: 1200px) {
  .works-hero__figure { 
    width: clamp(260px, 18vw, 300px); 
    height: clamp(310px, 22vw, 360px); 
  }
}

/* Tablette: réduire pour éviter les chevauchements */
@media (max-width: 1199px) and (min-width: 1025px) {
  .works-hero__inner { gap: clamp(16px, 3vw, 32px); }
  .works-hero__figure { 
    width: clamp(220px, 17vw, 260px); 
    height: clamp(265px, 20vw, 312px); 
    border-radius: 24px;
  }
}

.works-hero__figure--overlay::after {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(2, 139, 154, 0.07);
  pointer-events: none;
}

.works-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
  /* Amélioration performance et qualité */
  image-rendering: optimizeQuality;
  image-rendering: -webkit-optimize-contrast;
  will-change: auto;
}

.works-hero__content {
  width: min(656px, 100%);
  display: inline-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: clamp(12px, 3vw, 18px);
  padding-inline: clamp(1rem, 4vw, 2rem);
  flex-shrink: 1;
  flex-grow: 1;
  order: 2;
  /* Amélioration mobile */
  min-height: 280px;
  justify-content: center;
}

/* Desktop: largeur optimale avec images */
@media (min-width: 1025px) {
  .works-hero__content {
    max-width: 656px;
  }
}

/* Tablette et Mobile: prendre toute la largeur */
@media (max-width: 1024px) {
  .works-hero__content {
    width: 100%;
    max-width: 100%;
    padding-inline: clamp(1.25rem, 5vw, 3rem);
    gap: clamp(16px, 4vw, 24px);
  }
}

@media (max-width: 768px) {
  .works-hero__content {
    padding-inline: clamp(1.5rem, 6vw, 2rem);
    padding-block: clamp(2rem, 6vw, 3rem);
    min-height: auto;
  }
}

.works-hero__header {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: clamp(6px, 1.5vw, 10px);
}

.works-hero__subtitle {
  align-self: stretch;
  text-align: center;
  color: #5C6D6F;
  font-size: clamp(14px, 2.5vw, 19.2px);
  font-family: "Nunito Sans Variable", "Nunito Sans", system-ui, -apple-system, sans-serif;
  font-weight: 700;
  text-transform: uppercase;
  line-height: 1.4;
  letter-spacing: clamp(1px, 0.25vw, 1.92px);
  margin: 0;
}

.works-hero__title {
  align-self: stretch;
  text-align: center;
  color: #334749;
  font-size: clamp(24px, 5vw, 47.78px);
  font-family: "Nunito Sans Variable", "Nunito Sans", system-ui, -apple-system, sans-serif;
  font-weight: 800;
  line-height: 1.2;
  margin: 0;
  /* Amélioration lisibilité mobile */
  hyphens: auto;
  word-break: break-word;
}

@media (max-width: 768px) {
  .works-hero__title {
    font-size: clamp(22px, 6vw, 36px);
    line-height: 1.25;
  }
}

@media (max-width: 480px) {
  .works-hero__title {
    font-size: clamp(20px, 7vw, 28px);
    line-height: 1.3;
  }
}

.works-hero__desc {
  align-self: stretch;
  text-align: center;
  color: #5C6D6F;
  font-size: clamp(15px, 2.5vw, 19.2px);
  font-family: "Nunito Sans Variable", "Nunito Sans", system-ui, -apple-system, sans-serif;
  font-weight: 400;
  line-height: 1.6;
  margin: 0;
  max-width: 100%;
}

@media (max-width: 768px) {
  .works-hero__desc {
    font-size: clamp(14px, 3vw, 17px);
    line-height: 1.65;
  }
}

.works-hero__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: clamp(14px, 2vw, 18px) clamp(24px, 3vw, 30px);
  background: #334749;
  border-radius: 30px;
  color: #FFFEF8;
  font-size: clamp(16px, 2vw, 19.2px);
  font-family: "Nunito Sans", sans-serif;
  font-weight: 700;
  line-height: 1.2;
  text-align: center;
  border: none;
  text-decoration: none;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
  /* Amélioration accessibilité tactile */
  min-height: 48px;
  min-width: 140px;
  touch-action: manipulation;
  -webkit-tap-highlight-color: transparent;
}

.works-hero__cta:hover,
.works-hero__cta:focus {
  background: #048B9A;
  transform: translateY(-2px);
}

.works-hero__cta:focus-visible {
  outline: 3px solid #048B9A;
  outline-offset: 4px;
}

.works-hero__cta:active {
  transform: translateY(0);
}

@media (max-width: 768px) {
  .works-hero__cta {
    padding: 16px 28px;
    min-height: 52px;
    font-size: 17px;
  }
}

@media (max-width: 480px) {
  .works-hero__cta {
    font-size: 16px;
    padding: 14px 24px;
    min-height: 48px;
    width: auto;
    max-width: 100%;
  }
}
</style>
