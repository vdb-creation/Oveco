---
/**
 * Composant: WorksHero
 * Hero pour la page des réalisations avec grille de fond et 2 images latérales
 * Compatible TinaCMS via props
 */

export interface MediaImage {
  src: string;
  alt: string;
  overlay?: boolean;
}

export interface Props {
  subtitle?: string;
  title?: string;
  description?: string;
  ctaLabel?: string;
  ctaHref?: string;
  mediaLeft?: MediaImage;
  mediaRight?: MediaImage;
  id?: string;
}

const {
  id = "works-hero-title",
  subtitle = "Nos réalisations",
  title = "Des projets qui ont du sens",
  description = "Description courte ipsum dolor sit amet consectetur adipiscing elit tortor eu egestas morbi sem vulputate etiam facilisis pellentesque ut quis.",
  ctaLabel = "Nous contacter",
  ctaHref = "#contact",
  mediaLeft = {
    src: "/uploads/hero/maison-toit.png",
    alt: "Maison avec panneaux solaires"
  },
  mediaRight = {
    src: "/uploads/hero/maison-build.png",
    alt: "Chantier de construction",
    overlay: true
  }
} = Astro.props;
---

<section class="works-hero" aria-labelledby={id}>
  <div class="container works-hero__inner">
    <div class="works-hero__side works-hero__side--left" aria-hidden="true">
      <figure class="works-hero__figure">
        <img class="works-hero__image" src={mediaLeft.src} alt={mediaLeft.alt} loading="lazy" />
      </figure>
    </div>

    <div class="works-hero__content">
      <header class="works-hero__header">
        <p class="works-hero__subtitle">{subtitle}</p>
        <h1 class="works-hero__title" id={id}>{title}</h1>
      </header>
      <p class="works-hero__desc">{description}</p>
      <a href={ctaHref} class="works-hero__cta">{ctaLabel}</a>
    </div>

    <div class="works-hero__side works-hero__side--right" aria-hidden="true">
      <figure class={`works-hero__figure ${mediaRight.overlay ? 'works-hero__figure--overlay' : ''}`}>
        <img class="works-hero__image" src={mediaRight.src} alt={mediaRight.alt} loading="lazy" />
      </figure>
    </div>
  </div>
</section>

<style>
.works-hero {
  background-image: url('/assets/imgs/BgGrille.svg');
  background-repeat: repeat-x;
  background-position: center top;
  background-size: auto;
  padding: clamp(32px, 8vw, 150px) clamp(16px, 6vw, 75px);
  position: relative;
}

.works-hero::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: -120px;
  height: 120px;
  background-image: inherit;
  background-repeat: repeat-x;
  background-position: center top;
  background-size: auto;
  pointer-events: none;
  z-index: 0;
}

.works-hero__inner {
  width: 100%;
  max-width: 1219px;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  gap: clamp(24px, 6vw, 63px);
  position: relative;
  z-index: 1;
}

@media (max-width: 1024px) {
  .works-hero__inner {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: clamp(16px, 4vw, 32px);
    text-align: center;
  }
}

.works-hero__side {
  display: flex;
  align-items: center;
}

.works-hero__side--left {
  padding-bottom: clamp(12px, 3vw, 72px);
}

.works-hero__side--right {
  padding-top: clamp(12px, 3vw, 72px);
}

@media (max-width: 1024px) {
  .works-hero__side {
    padding: 0 !important;
    transform: none !important;
  }
}

.works-hero__figure {
  width: clamp(240px, 30vw, 320px);
  aspect-ratio: 266 / 320;
  position: relative;
  overflow: hidden;
  border-radius: 30px;
  margin: 0;
  display: block;
}

.works-hero__figure--overlay::after {
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(2, 139, 154, 0.07);
  pointer-events: none;
}

.works-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  display: block;
}

.works-hero__content {
  width: min(656px, 100%);
  display: inline-flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  gap: clamp(12px, 3vw, 18px);
  padding-inline: clamp(16px, 4vw, 32px);
}

.works-hero__header {
  align-self: stretch;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: clamp(4px, 1vw, 6px);
}

.works-hero__subtitle {
  align-self: stretch;
  text-align: center;
  color: var(--oveco-text);
  font-size: clamp(16px, 3vw, 19.2px);
  font-family: var(--oveco-font-family);
  font-weight: var(--oveco-weight-bold);
  text-transform: uppercase;
  line-height: clamp(18px, 3.5vw, 20px);
  letter-spacing: clamp(1.2px, 0.3vw, 1.92px);
  margin: 0;
}

.works-hero__title {
  align-self: stretch;
  text-align: center;
  color: var(--oveco-secondary);
  font-size: clamp(28px, 6vw, 47.78px);
  font-family: var(--oveco-font-family);
  font-weight: var(--oveco-weight-extrabold);
  line-height: clamp(34px, 7vw, 57.34px);
  margin: 0;
}

.works-hero__desc {
  align-self: stretch;
  text-align: center;
  color: var(--oveco-text);
  font-size: clamp(16px, 3vw, 19.2px);
  font-family: var(--oveco-font-family);
  font-weight: var(--oveco-weight-regular);
  line-height: clamp(24px, 4vw, 28.8px);
  margin: 0;
}

.works-hero__cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 18px 30px;
  background: var(--oveco-secondary);
  border-radius: var(--oveco-radius-button);
  color: var(--oveco-white);
  font-size: var(--oveco-font-h3);
  font-family: var(--oveco-font-family);
  font-weight: var(--oveco-weight-bold);
  line-height: 1.2;
  text-align: center;
  border: none;
  text-decoration: none;
  cursor: pointer;
  transition: all var(--oveco-transition-normal);
}

.works-hero__cta:hover {
  background: #2a3a3c;
  transform: translateY(-2px);
  box-shadow: var(--oveco-shadow-medium);
}

@media (max-width: 768px) {
  .works-hero__cta {
    padding: 16px 24px;
    font-size: 16px;
  }
}

@media (prefers-reduced-motion: reduce) {
  .works-hero__cta {
    transition: none !important;
  }
  .works-hero__cta:hover {
    transform: none !important;
  }
}
</style>
