---
import { Linkedin, Twitter, Mail } from 'lucide-astro';
import Anim from './Anim.astro';
import SmartImage from './SmartImage.astro';
import defaultAvatar from '../assets/imgs/default-placeholder.png';

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  image?: string;
  socials?: {
    linkedin?: string;
    twitter?: string;
    email?: string;
  };
}

type TeamData = { 
  sectionIndex?: number;
  title: string; 
  subtitle: string; 
  members: TeamMember[] 
};

const defaults: TeamData = {
  title: "Notre Équipe",
  subtitle: "Des experts passionnés à votre service",
  members: [
    {
      name: "Alice Dupont",
      role: "CEO & Founder",
      bio: "Visionnaire et leader, elle guide l'équipe vers l'excellence.",
      socials: { linkedin: "#", twitter: "#", email: "alice@example.com" }
    },
    {
      name: "Bob Martin",
      role: "Lead Developer",
      bio: "Expert technique avec plus de 10 ans d'expérience.",
      socials: { linkedin: "#", twitter: "#" }
    },
    {
      name: "Claire Moreau",
      role: "UX/UI Designer",
      bio: "Créative et attentive aux détails, elle conçoit des expériences mémorables.",
      socials: { linkedin: "#", email: "claire@example.com" }
    },
    {
      name: "David Laurent",
      role: "Marketing Lead",
      bio: "Stratège digital qui transforme les idées en succès.",
      socials: { twitter: "#", email: "david@example.com" }
    },
  ] as TeamMember[],
};
const merged: TeamData = {
  ...defaults,
  ...(Astro.props as Partial<TeamData>),
};
const { title, subtitle, members } = merged;
---

<section class="wf-team" id="team">
  <div class="wf-team__container">
    <Anim effect="fade-up" delay={100}>
      <div class="wf-team__header">
        <h2 class="wf-team__title" data-bind="team.title">{title}</h2>
        <p class="wf-team__subtitle" data-bind="team.subtitle">{subtitle}</p>
      </div>
    </Anim>
    <div class="wf-team__grid">
      {members.map((member, index) => (
        <Anim effect="fade-up" delay={150 + index * 100}>
          <div class="wf-team-card card">
            <div class="wf-team-card__image">
              <SmartImage
                cmsSrc={member.image}
                fallback={defaultAvatar}
                alt={member.name}
                width={300}
                aspectRatio={1}
                layout="constrained"
                placeholder="dominantColor"
                breakpoints={[150, 300, 450]}
                class="wf-team-card__img"
              />
            </div>
            <div class="wf-team-card__content">
              <h3 class="wf-team-card__name" data-bind={`team.members.${index}.name`}>{member.name}</h3>
              <p class="wf-team-card__role" data-bind={`team.members.${index}.role`}>{member.role}</p>
              <p class="wf-team-card__bio" data-bind={`team.members.${index}.bio`}>{member.bio}</p>
              {member.socials && (
                <div class="wf-team-card__socials">
                  {member.socials.linkedin && (
                    <a href={member.socials.linkedin} aria-label="LinkedIn">
                      <Linkedin size={18} />
                    </a>
                  )}
                  {member.socials.twitter && (
                    <a href={member.socials.twitter} aria-label="Twitter">
                      <Twitter size={18} />
                    </a>
                  )}
                  {member.socials.email && (
                    <a href={`mailto:${member.socials.email}`} aria-label="Email">
                      <Mail size={18} />
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>
        </Anim>
      ))}
    </div>
  </div>
</section>

<style>
  .wf-team {
    padding: 6rem 0;
    background: var(--surface);
    border-bottom: 2px solid var(--color-border);
  }

  .wf-team__container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .wf-team__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .wf-team__title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .wf-team__title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 3px;
    background: var(--color-border);
  }

  .wf-team__subtitle {
    font-size: 1.2rem;
    color: #666;
    margin-top: 1.5rem;
  }

  .wf-team__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
  }

  .wf-team-card {
    border: 2px solid var(--color-border);
    background: var(--surface);
    transition: transform var(--transition), box-shadow var(--transition);
    overflow: hidden;
  }

  .wf-team-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
  }

  .wf-team-card__image {
    width: 100%;
    height: 280px;
    border-bottom: 2px solid var(--color-border);
    overflow: hidden;
    position: relative;
  }

  .wf-team-card__image img,
  .wf-team-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition);
  }

  .wf-team-card:hover .wf-team-card__image img,
  .wf-team-card:hover .wf-team-card__img {
    transform: scale(1.1);
  }

  .wf-team-card__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    font-weight: bold;
    color: #999;
  }

  .wf-team-card__content {
    padding: 2rem;
  }

  .wf-team-card__name {
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
  }

  .wf-team-card__role {
    font-size: 1rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .wf-team-card__bio {
    line-height: 1.6;
    color: #555;
    margin-bottom: 1.5rem;
  }

  .wf-team-card__socials {
    display: flex;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }

  .wf-team-card__socials a {
    width: 36px;
    height: 36px;
    border: 2px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition);
    color: var(--color-text);
  }

  .wf-team-card__socials a:hover {
    background: var(--color-accent-black);
    color: #fff;
    transform: translateY(-3px) rotate(5deg);
  }

  /* Animations gérées via <Anim /> */

  @media (max-width: 768px) {
    .wf-team__title {
      font-size: 2rem;
    }

    .wf-team__subtitle {
      font-size: 1rem;
    }
  }
</style>
