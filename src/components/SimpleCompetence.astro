---
/**
 * SimpleCompetence Component - Oveco
 * Bloc compétence avec image, titre, description et CTA
 * 
 * @component
 * @tinacms Template : simpleCompetence
 */

export interface Props {
  number: string;
  title: string;
  description: string;
  cta: {
    label: string;
    url: string;
  };
  image: {
    src: string;
    alt: string;
    isPng?: boolean;
    rotate180?: boolean;
  };
}

const { number, title, description, cta, image } = Astro.props;

// Déterminer les classes d'image
const imageClasses = [];
if (image.isPng) imageClasses.push('is-png');
if (image.rotate180) imageClasses.push('rotate-180');
---

<div class="simple-competence">
  <div class="simple-competence__visual">
    <div class="simple-competence__bg" aria-hidden="true"></div>
    <img 
      src={image.src} 
      alt={image.alt}
      class:list={['simple-competence__image', ...imageClasses]}
      loading="lazy"
    />
  </div>

  <div class="simple-competence__content">
    <header class="simple-competence__header">
      <p class="simple-competence__kicker">{number}</p>
      <h3 class="simple-competence__title">{title}</h3>
    </header>
    
    <p class="simple-competence__description">{description}</p>
    
    <div class="simple-competence__cta">
      <a href={cta.url} class="simple-competence__link">
        {cta.label}
      </a>
    </div>
  </div>
</div>

<style>
  .simple-competence {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 130px;
    width: 100%;
    margin-inline: auto;
  }

  .simple-competence__visual {
    width: 251px;
    height: 272px;
    position: relative;
    margin: 0;
  }

  .simple-competence__bg {
    position: absolute;
    width: 135.13px;
    height: 144.77px;
    left: 80.12px;
    top: 175.66px;
    transform: rotate(-171deg);
    transform-origin: top left;
    background: var(--oveco-white);
  }

  .simple-competence__image {
    position: absolute;
    width: 233.23px;
    height: 233.23px;
    left: 217.78px;
    top: 267.27px;
    transform: rotate(-171deg);
    transform-origin: top left;
    object-fit: contain;
    display: block;
  }

  .simple-competence__image.is-png {
    transform: none;
    left: 0;
    top: 0;
  }

  .simple-competence__image.rotate-180 {
    transform: rotate(180deg);
    transform-origin: center center;
    left: 0;
    top: 0;
  }

  .simple-competence__content {
    width: 458px;
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 21px;
  }

  .simple-competence__header {
    align-self: stretch;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .simple-competence__kicker {
    color: var(--oveco-text);
    font-size: var(--oveco-font-h3);
    font-family: var(--oveco-font-family);
    font-weight: var(--oveco-weight-bold);
    text-transform: uppercase;
    line-height: 20px;
    letter-spacing: 1.92px;
    margin: 0;
  }

  .simple-competence__title {
    color: var(--oveco-secondary);
    font-size: var(--oveco-font-h2);
    font-family: var(--oveco-font-family);
    font-weight: var(--oveco-weight-extrabold);
    line-height: 47.77px;
    margin: 0;
  }

  .simple-competence__description {
    color: var(--oveco-text);
    font-size: var(--oveco-font-p);
    font-family: var(--oveco-font-family);
    font-weight: var(--oveco-weight-regular);
    line-height: 28.8px;
    margin: 0;
  }

  .simple-competence__cta {
    margin: 0;
  }

  .simple-competence__link {
    display: inline-flex;
    align-items: flex-end;
    gap: 6px;
    text-decoration: none;
    color: var(--oveco-accent);
    font-size: var(--oveco-font-p);
    font-family: var(--oveco-font-family);
    font-weight: var(--oveco-weight-bold);
    line-height: 19.2px;
  }

  .simple-competence__link:focus {
    outline: 2px solid var(--oveco-accent);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .simple-competence__link::after {
    content: '';
    width: 10px;
    height: 8.57px;
    border: 1.5px solid currentColor;
    border-left: 0;
    border-bottom: 0;
    transform: rotate(45deg);
    display: inline-block;
    margin-bottom: 2px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .simple-competence {
      gap: 64px;
    }
  }

  @media (max-width: 768px) {
    .simple-competence {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }

    .simple-competence__content {
      width: 100%;
    }

    .simple-competence__visual {
      width: 200px;
      height: 220px;
    }

    .simple-competence__image {
      width: 200px;
      height: 200px;
      left: 160px;
      top: 200px;
    }
  }
</style>
