---
/**
 * SimpleCompetence Component - Oveco
 * Bloc compétence avec image, titre, description et CTA
 * 
 * @component
 * @tinacms Template : simpleCompetence
 */

export interface Props {
  number: string;
  title: string;
  description: string;
  cta: {
    label: string;
    url: string;
  };
  image: {
    src: string;
    alt: string;
    isPng?: boolean;
    rotate180?: boolean;
  };
}

const { number, title, description, cta, image } = Astro.props;

// Déterminer les classes d'image
const imageClasses = [];
if (image.isPng) imageClasses.push('is-png');
if (image.rotate180) imageClasses.push('rotate-180');
---

<div class="simple-competence">
  <div class="simple-competence__visual">
    <div class="simple-competence__bg" aria-hidden="true"></div>
    <img 
      src={image.src} 
      alt={image.alt}
      class:list={['simple-competence__image', ...imageClasses]}
      loading="lazy"
      decoding="async"
      width="233"
      height="233"
    />
  </div>

  <div class="simple-competence__content">
    <header class="simple-competence__header">
      <p class="simple-competence__kicker">{number}</p>
      <h3 class="simple-competence__title">{title}</h3>
    </header>
    
    <p class="simple-competence__description">{description}</p>
    
    <div class="simple-competence__cta">
      <a href={cta.url} class="simple-competence__link">
        {cta.label}
      </a>
    </div>
  </div>
</div>

