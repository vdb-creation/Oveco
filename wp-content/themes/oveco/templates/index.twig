{% extends "base.twig" %}

{% block content %}
    <div class="home-page">
        <section class="hero">
            <div class="container">
                <h1>{{ site.name }}</h1>
                <p>{{ site.description }}</p>
            </div>
        </section>

        {# Section Témoignages #}
        <section class="testimonials-section">
            <div class="container">
                <h1>Témoignages</h1>
                {% if testimonials %}
                    <div class="testimonials-list">
                        {% for testimonial in testimonials %}
                            <div class="testimonial-item">
                                <div class="testimonial-content">
                                    {{ testimonial.content }}
                                </div>
                                
                                <div class="testimonial-author">
                                    {% if testimonial.meta('_testimonial_author') %}
                                        <p class="client-name">
                                            <strong>{{ testimonial.meta('_testimonial_author') }}</strong>
                                        </p>
                                    {% endif %}
                                    
                                    {% if testimonial.meta('_testimonial_position') %}
                                        <p class="client-position">
                                            {{ testimonial.meta('_testimonial_position') }}
                                        </p>
                                    {% endif %}
                                    
                                    {% if testimonial.meta('_testimonial_company') %}
                                        <p class="client-company">
                                            {{ testimonial.meta('_testimonial_company') }}
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p>Aucun témoignage trouvé.</p>
                {% endif %}
            </div>
        </section>

        {# Section Projets #}
        <section class="projects-section">
            <div class="container">
                <h1>Projets</h1>
                {% if projects %}
                    <div class="projects-list">
                        {% for project in projects %}
                            <div class="project-item">
                                <h3>{{ project.title }}</h3>
                                
                                {% if project.content %}
                                    <div class="project-content">
                                        {{ project.content }}
                                    </div>
                                {% endif %}
                                
                                <div class="project-meta">
                                    {% if project.meta('_project_client') %}
                                        <p class="project-client">
                                            <strong>Client:</strong> {{ project.meta('_project_client') }}
                                        </p>
                                    {% endif %}
                                    
                                    {% if project.tags and project.tags|length > 0 %}
                                        <div class="project-tags">
                                            <strong>Tags:</strong>
                                            {% for tag in project.tags %}
                                                <span class="tag">{{ tag.name }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                                
                                {% if project.meta('_project_url') %}
                                    <p class="project-url">
                                        <a href="{{ project.meta('_project_url') }}" target="_blank">Voir le site</a>
                                    </p>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p>Aucun projet trouvé.</p>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}
