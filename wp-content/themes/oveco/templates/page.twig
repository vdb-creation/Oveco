{# Template de page générique #}
{% extends "base.twig" %}

{% block content %}
<div class="page-content">
    <div class="container">
        {% if post.post_title %}
            <header class="page-header">
                <h1 class="page-title">{{ post.post_title }}</h1>
            </header>
        {% endif %}
        
        {% if post.post_content %}
            <div class="page-body">
                {{ post.post_content }}
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}