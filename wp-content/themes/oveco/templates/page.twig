{# Template de page générique #}
{% extends "base.twig" %}

{% block content %}
<div class="page-content">
    <div class="container">
        {% if post.post_title %}
            <header class="page-header">
                <h1 class="page-title">{{ post.post_title }}</h1>
            </header>
        {% endif %}
        
        <div class="page-body">
            {{ fn('the_content') }}
        </div>
    </div>
</div>
{% endblock %}