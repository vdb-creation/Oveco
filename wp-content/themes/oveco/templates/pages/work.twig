{% extends "base.twig" %}

{% block content %}
<main class="work-page" id="work">
  <section class="work-hero" aria-labelledby="work-hero-title">
    <div class="container work-hero__inner">
      <div class="work-hero__content">
        <div class="work-hero__heading">
          <p class="work-hero__subtitle">{{ project_type ?? 'Projet' }}</p>
          <h1 class="work-hero__title" id="work-hero-title">{{ project.title ?? 'Projet' }}</h1>
        </div>
        {% set hero_desc = project_description is defined and project_description ? project_description : (project and project.excerpt ? project.excerpt : '') %}
        {% if hero_desc %}
          <p class="work-hero__desc">{{ hero_desc }}</p>
        {% endif %}
        <a href="{{ site.url }}#contact" class="work-hero__cta">Nous contacter</a>
      </div>

      <div class="work-hero__media" aria-hidden="true">
        <figure class="work-hero__image">
          {% set hero_img = project_hero_image is defined and project_hero_image ? project_hero_image : (project and project.thumbnail ? project.thumbnail.src : (assets_url ~ '/imgs/maison-toit.png')) %}
          <img src="{{ hero_img }}" alt="Image du projet {{ project.title|e }}" loading="lazy">
        </figure>
        <div class="work-hero__deco work-hero__deco--bg"></div>
        <img class="work-hero__icon work-hero__icon--house" src="{{ assets_url }}/icons/maison.png" alt="" loading="lazy">
        <img class="work-hero__icon work-hero__icon--pencil" src="{{ assets_url }}/icons/crayon.png" alt="" loading="lazy">
      </div>
    </div>
  </section>

  {# Section Comp√©tences #}
  {% include "partials/competences-section.twig" %}

   {# Section Oveco #}
  {% include "partials/text_image-section.twig" %}

  {# Section Stats #}
  {% include "partials/stats-section.twig" %}

  {# Section Gallery #}
  {% include "partials/gallery-section.twig" with { gallery: gallery } %}

  {# Section Projects #}
  {% include "partials/projects-section.twig" %}

  {# Section Contact #}
  {% include "partials/contact-section.twig" %}





</main>
{% endblock %}
