{# Page À propos - About #}
{% extends "base.twig" %}

{% block content %}
<div class="about-page">
  {% if post is defined and post and post.content %}
    <div class="works-page__intro is-gutenberg">{{ post.content }}</div>
  {% endif %}

  {% include "partials/works-hero.twig" with {
    id: "works-hero-title",
    subtitle: "C’est quoi Oveco ?",
    title: "Des ingénieurs au service de projets durables",
    desc: "Chez Oveco, nous allions savoir-faire technique et engagement humain pour imaginer des installations sur mesure, performantes et responsables.
De l’étude à la mise en service, nous accompagnons chaque projet avec rigueur, clarté… et conviction.",
    cta: { label: "Nous contacter", url: site.url ~ "#contact" },
    media_left: { src: assets_url ~ "/imgs/maison-toit.png", alt: "Maison avec panneaux solaires" },
    media_right: { src: assets_url ~ "/imgs/maison-build.png", alt: "Chantier de construction", overlay: true }
  } %}

  {# --- Section Recherche Projets (UI uniquement) --- #}
  {% macro tag_chip(label, selected=false) %}
    <button class="works-search__chip {{ selected ? 'is-selected' : '' }}" type="button" aria-pressed="{{ selected ? 'true' : 'false' }}" data-tag="{{ label }}">
      <span class="works-search__chip-label">{{ label }}</span>
    </button>
  {% endmacro %}
  {% import _self as ui %}

  {# Section Compétences avec descriptions #}
  {% include "partials/competences-section.twig" with {
    competences_subtitle: "Nos expertises",
    competences_title: "Des compétences techniques au service de vos projets",
    competences_description: "Nous maîtrisons l’ensemble de la chaîne technique, de la conception à la réalisation, pour des solutions énergétiques performantes et durables.",
    competences: [
      {
        image: assets_url ~ '/icons/elec.png',
        title: "Énergie solaire",
        description: "Chaque solution est pensée dans le détail, depuis le dimensionnement jusqu’à la mise en service, en tenant compte du contexte et des usages."
      },
      {
        image: assets_url ~ '/icons/eolienne.png',
        title: "Ventilation et climatisation",
        description: "Des systèmes performants et économes en énergie, adaptés aux spécificités de chaque bâtiment et aux besoins des utilisateurs."
      },
      {
        image: assets_url ~ '/icons/clim.png',
        title: "Électricité et automatismes",
        description: "De l’installation électrique aux systèmes de pilotage intelligents, pour optimiser la consommation et le confort au quotidien."
      }
    ]
  } %}

  {# Section Oveco #}
  {% include "partials/text_image-section.twig" with {
    section_subtitle: "L'équipe",
    section_title: "Des ingénieurs engagés,<br/>proches du terrain", 
